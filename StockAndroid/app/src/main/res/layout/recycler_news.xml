<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/newsbox_bg"
    android:elevation="5dp">

    <!--
    <TextView
        android:id="@+id/myview"
        android:layout_width="251dp"
        android:layout_height="125dp"
        android:background="@drawable/newsbox_bg"
        android:elevation="10dp" />
    -->
    <TextView
        android:id="@+id/newsSourceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Source"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/newsSourceTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Publish Time"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/newsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newsSourceTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="10dp"
        android:text="News Text"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/newsbox_bg"
            app:srcCompat="@drawable/logo" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>